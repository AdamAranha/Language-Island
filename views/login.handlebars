<form method="POST" action="/logins/login">


    <div class="form-group">
        <label for="usernameInput">Username</label>
        <input name="username" type="text" class="form-control" id="usernameInput">
    </div>


    <div class="form-group">
        <label for="emailInput">Email address</label>
        <input name="email" type="email" class="form-control" id="emailInput" placeholder="Enter email" disabled>
    </div>

    <div class="form-group">
        <label for="passwordInput">Password</label>
        <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p><a href="register">Create an Account</a></p>